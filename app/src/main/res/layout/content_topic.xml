<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/no_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/list"
        app:layout_constraintBottom_toBottomOf="@id/list"
        app:layout_constraintLeft_toLeftOf="@id/list"
        app:layout_constraintRight_toRightOf="@id/list"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_topics_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/no_friends"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/no_topics_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您目前還沒有儲存任何話題喔！"
            app:layout_constraintTop_toBottomOf="@id/no_topics_img"
            app:layout_constraintLeft_toLeftOf="@id/no_topics_img"
            app:layout_constraintRight_toRightOf="@id/no_topics_img" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:tint="#000000"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <at.markushi.ui.CircleButton
        android:id="@+id/add_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cb_color="@color/colorPrimary"
        android:src="@drawable/add"
        android:padding="55dp"
        app:cb_pressedRingWidth="8dp"
        app:layout_constraintBottom_toBottomOf="@id/list"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

</android.support.constraint.ConstraintLayout>