<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/no_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/list"
        app:layout_constraintBottom_toBottomOf="@id/list"
        app:layout_constraintLeft_toLeftOf="@id/list"
        app:layout_constraintRight_toRightOf="@id/list"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_invitation_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/no_friends"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/no_invitation_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您目前還沒有邀請喔！"
            app:layout_constraintTop_toBottomOf="@id/no_invitation_img"
            app:layout_constraintLeft_toLeftOf="@id/no_invitation_img"
            app:layout_constraintRight_toRightOf="@id/no_invitation_img" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>