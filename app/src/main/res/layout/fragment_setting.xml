<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/side_nav_bar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/selfie"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/default_selfie"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#AAAAAA"/>

        <TextView
            android:id="@+id/setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anonymous"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/selfie"
            app:layout_constraintLeft_toLeftOf="@id/selfie"
            android:layout_marginTop="10dp"/>

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <RelativeLayout
                android:id="@+id/profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/profile_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="個人檔案"
                    android:textSize="16dp" />

            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/profile_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile_btn"
                app:layout_constraintLeft_toLeftOf="@id/profile_btn"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <TextView
                        android:id="@+id/browse_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="瀏覽檔案"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/browse"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/edit_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改檔案"/>

                </RelativeLayout>

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/setting_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="設定"
                    android:textSize="16dp" />

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>