<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/side_nav_bar">
    </View>

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:tint="@color/white"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <ImageView
        android:id="@+id/report_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:tint="@color/white"
        android:src="@drawable/report" />

    <android.support.constraint.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selfie"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/default_selfie"
        app:layout_constraintTop_toTopOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="#AAAAAA"/>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50dp"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/name_TV"
                app:layout_constraintLeft_toLeftOf="@id/name_TV"
                app:layout_constraintRight_toRightOf="@id/name_TV">

                <TextView
                    android:id="@+id/distance_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距離您 "
                    android:textSize="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/distance_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/distance_TV"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" km"
                    android:textSize="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/distance_data"/>

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/intro_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/distance"
                app:layout_constraintLeft_toLeftOf="@id/distance"
                app:layout_constraintRight_toRightOf="@id/distance"
                android:layout_marginTop="10dp"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/great"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/not_bad"
                app:layout_constraintBottom_toBottomOf="@id/not_bad"
                app:layout_constraintRight_toLeftOf="@id/not_bad"
                android:layout_marginRight="5dp">

                <ImageView
                    android:id="@+id/great_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/great"
                    android:tint="@color/green"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/great_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/great_img"
                    app:layout_constraintBottom_toBottomOf="@id/great_img"
                    app:layout_constraintLeft_toRightOf="@id/great_img"
                    android:layout_marginLeft="5dp"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/not_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/intro_TV"
                app:layout_constraintLeft_toLeftOf="@id/intro_TV"
                app:layout_constraintRight_toRightOf="@id/intro_TV"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/not_bad_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/not_bad"
                    android:tint="@color/yellow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/no_bad_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/not_bad_img"
                    app:layout_constraintBottom_toBottomOf="@id/not_bad_img"
                    app:layout_constraintLeft_toRightOf="@id/not_bad_img"
                    android:layout_marginLeft="5dp" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/not_bad"
                app:layout_constraintBottom_toBottomOf="@id/not_bad"
                app:layout_constraintLeft_toRightOf="@id/not_bad"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/bad_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bad"
                    android:tint="@color/red"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/bad_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/bad_img"
                    app:layout_constraintBottom_toBottomOf="@id/bad_img"
                    app:layout_constraintLeft_toRightOf="@id/bad_img"
                    android:layout_marginLeft="5dp"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/info_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@id/not_bad"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/colorPrimary">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/info_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_info"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/info_img"
                        android:layout_marginLeft="10dp"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/hobby_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@id/info_card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/colorPrimary">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_gravity="center">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/hobby_list"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:maxWidth="250dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@color/colorPrimary">

                    </android.support.v7.widget.RecyclerView>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <Button
            android:id="@+id/invite_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="發送邀請"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/hobby_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_style_blue"/>

            <android.support.constraint.Guideline
                android:id="@id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <Button
                android:id="@+id/accept_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="接受邀請"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/hobby_card"
                app:layout_constraintRight_toLeftOf="@id/line3"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_style_green"
                android:visibility="gone"/>

            <Button
                android:id="@+id/refuse_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="拒絕邀請"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/hobby_card"
                app:layout_constraintLeft_toRightOf="@id/line3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_style_red"
                android:visibility="gone"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

</android.support.constraint.ConstraintLayout>